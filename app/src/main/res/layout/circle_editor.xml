<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_white"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/circle_editor1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.9"
            android:gravity="center"
            android:text="圈子海报"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/posters_img"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="7.1" >

            <ImageView
                android:id="@+id/circle_posters"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_poster_loading" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/circle_editor2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.9"
            android:gravity="center"
            android:text="圈子名称"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/circle_editor_name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7.1"
            android:background="@color/transparent"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@drawable/circle_editor2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.9"
            android:gravity="center"
            android:text="圈子简介"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/circle_editor_introduction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7.1"
            android:background="@color/transparent"
            android:gravity="top"
            android:maxLength="96"
            android:padding="10dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/circle_editor3"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.9"
            android:gravity="center"
            android:text="圈子标签"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/circle_editor_label"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7.1"
            android:background="@color/transparent"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>