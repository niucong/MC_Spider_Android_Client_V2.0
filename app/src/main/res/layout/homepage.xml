<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/homepage_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/home_down"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <!-- 访客 -->

            <LinearLayout
                android:id="@+id/box_visitors"
                android:layout_width="match_parent"
                android:layout_height="52.15dp"
                android:background="@drawable/home_down1"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/homepage_down_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:padding="10dp" >

                    <LinearLayout
                        android:id="@+id/homepage_down_visitors"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circleblogdetails_memberlist_title"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/fangke" />

                        <TextView
                            android:id="@+id/visitors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:paddingLeft="2dp"
                            android:singleLine="true"
                            android:text="访客"
                            android:textColor="#666666"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homepage_down_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/visitor_pic_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/visitor_pic_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/visitor_pic_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/visitor_pic_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/visitor_pic_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/visitors_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.3"
                    android:padding="8dp"
                    android:src="@drawable/arrow_rights" />
            </LinearLayout>

            <!-- 最新图片 -->

            <LinearLayout
                android:id="@+id/box_pictures"
                android:layout_width="match_parent"
                android:layout_height="52.15dp"
                android:background="@drawable/home_down2"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/homepage_down_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:padding="10dp" >

                    <LinearLayout
                        android:id="@+id/homepage_down_newpic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circleblogdetails_memberlist_title"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/tupian" />

                        <TextView
                            android:id="@+id/new_pictures"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:paddingLeft="2dp"
                            android:singleLine="true"
                            android:text="最新图片"
                            android:textColor="#666666"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homepage_down_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/new_pic_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/new_pic_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/new_pic_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/new_pic_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/new_pic_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/newPic_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.3"
                    android:padding="8dp"
                    android:src="@drawable/arrow_rights" />
            </LinearLayout>

            <!-- 留言 -->

            <LinearLayout
                android:id="@+id/box_leaveWord"
                android:layout_width="match_parent"
                android:layout_height="52.15dp"
                android:background="@drawable/home_down2"
                android:gravity="center"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/homepage_down_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:padding="10dp" >

                    <LinearLayout
                        android:id="@+id/homepage_down_leaveWord"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circleblogdetails_memberlist_title"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/dongtai" />

                        <TextView
                            android:id="@+id/leaveWord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:singleLine="true"
                            android:text="留言"
                            android:textColor="#666666"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_leaveWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/leaveWord_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.3"
                    android:padding="8dp"
                    android:src="@drawable/arrow_rights" />
            </LinearLayout>

            <!-- 动态 -->

            <LinearLayout
                android:id="@+id/box_dynamic"
                android:layout_width="match_parent"
                android:layout_height="52.15dp"
                android:background="@drawable/home_down2"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/homepage_down_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:padding="10dp" >

                    <LinearLayout
                        android:id="@+id/homepage_down_dynamic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circleblogdetails_memberlist_title"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/dongtai" />

                        <TextView
                            android:id="@+id/dynamic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:paddingLeft="2dp"
                            android:singleLine="true"
                            android:text="动态"
                            android:textColor="#666666"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/dynamic_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.3"
                    android:padding="8dp"
                    android:src="@drawable/arrow_rights" />
            </LinearLayout>

            <!-- 个人信息 -->

            <LinearLayout
                android:id="@+id/box_message"
                android:layout_width="match_parent"
                android:layout_height="52.15dp"
                android:background="@drawable/home_down3"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/homepage_down_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:padding="10dp" >

                    <LinearLayout
                        android:id="@+id/homepage_down_pmsg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circleblogdetails_memberlist_title"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/gerenxinxi" />

                        <TextView
                            android:id="@+id/personal_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:paddingLeft="2dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/perInfo_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.3"
                    android:padding="8dp"
                    android:src="@drawable/arrow_rights" />
            </LinearLayout>
        </LinearLayout>

        <GridView
            android:id="@+id/home_faces"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:listSelector="@drawable/nothing"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            android:visibility="gone" >
        </GridView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/squareman"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/quanren_btn"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/homepage_btn"
            android:gravity="center"
            android:text="邀请朋友"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rlayout_join_circle_chatbox"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/txt_join_circle_chat"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/homepage_btn"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="进入圈聊"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txt_circle_chat_unreadnum"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_num"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>