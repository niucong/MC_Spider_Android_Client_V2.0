<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_note_bg"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="所在笔记本"
            android:textColor="#a2a2a2"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/note_cloud_details_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认笔记本"
            android:textColor="#353535"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_note_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="13dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="创建时间"
                android:textColor="#a2a2a2"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/note_cloud_details_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8月13日 10:00"
                android:textColor="#353535"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#d9dad9" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="13dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="更新时间"
                android:textColor="#a2a2a2"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/note_cloud_details_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8月13日 10:00"
                android:textColor="#353535"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/note_cloud_details_share_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_note_bg"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="分享人"
            android:textColor="#a2a2a2"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/note_cloud_details_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多啦A"
            android:textColor="#353535"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/note_cloud_details_friend_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_note_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:id="@+id/note_cloud_details_friend_num"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="您向9人分享过"
            android:textColor="#a2a2a2"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/note_cloud_details_friend1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/note_cloud_details_friend2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/note_cloud_details_friend3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/note_cloud_details_friend_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_rights" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/note_cloud_details_group_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_note_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:id="@+id/note_cloud_details_group_num"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="您分享过6个圈子"
            android:textColor="#a2a2a2"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/note_cloud_details_group1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/note_cloud_details_group2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/note_cloud_details_group3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/note_cloud_details_group_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_rights" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>