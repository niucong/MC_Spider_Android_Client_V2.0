<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle_top"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <RelativeLayout
            android:id="@+id/layout_dissertation_llayout_headbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                style="@style/circleblogdetails_txtStyle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发  布  人："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/layout_dissertation_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/layout_dissertation_img_head"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/layout_dissertation_txt_name"
                android:src="@drawable/icon_head_loading" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout1_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                style="@style/circleblogdetails_txtStyle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起时间："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/layout_dissertation_txt_createtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout1_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                style="@style/circleblogdetails_txtStyle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新时间："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/layout_dissertation_txt_updatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue"
                android:textSize="15dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle_top"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/layout_dissertation_llayout_browsebox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/layout_dissertation_txt_browse"
                        style="@style/circleblogdetails_txtStyle4"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="3dp"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/layout_dissertation_img_browse1"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_browse2"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_browse3"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_browse4"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_browse5"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ImageView13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3"
                    android:padding="3dp"
                    android:src="@drawable/arrow_rights" />
            </LinearLayout>

            <TextView
                android:id="@+id/layout_dissertation_txt_nullbrowse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/layout_dissertation_llayout_regardbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/layout_dissertation_txt_regard"
                        style="@style/circleblogdetails_txtStyle4"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="3dp"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/layout_dissertation_img_regard1"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_regard2"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_regard3"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_regard4"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_regard5"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ImageView07"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3"
                    android:padding="3dp"
                    android:src="@drawable/arrow_rights" />
            </LinearLayout>

            <TextView
                android:id="@+id/layout_dissertation_txt_nullregard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/layout_dissertation_llayout_sharedbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/layout_dissertation_txt_shared"
                        style="@style/circleblogdetails_txtStyle4"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="3dp"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/layout_dissertation_img_shared1"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_shared2"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_shared3"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_shared4"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/layout_dissertation_img_shared5"
                        style="@style/circleblogdetails_smallheadStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3"
                    android:padding="3dp"
                    android:src="@drawable/arrow_rights" />
            </LinearLayout>

            <TextView
                android:id="@+id/layout_dissertation_txt_nullshared"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>