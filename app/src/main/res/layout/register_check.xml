<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码已短信发送至："
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/layout_registercheck_txt_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/pl_foot"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="验证码"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/register_check"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="6位数字"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dip"
        android:layout_marginTop="8dp"
        android:gravity="left" >

        <TextView
            android:id="@+id/register_check_reget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未收到短信？1分钟后可"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/layout_registercheck_txt_sendagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="重新获取"
            android:textColor="@color/blue"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/layout_registercheck__btn_activate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_btn"
        android:text="激 活"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <View
        android:layout_width="1dip"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <TextView
            style="@style/text_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账户？"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/register_check_login"
            style="@style/auto_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击此登录"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>