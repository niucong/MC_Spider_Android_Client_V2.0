<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gray_outer"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_inner"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/item0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/line_3d_ver" />

            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_3d_hor" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/item2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/line_3d_ver" />

            <LinearLayout
                android:id="@+id/item3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_3d_hor"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="gone" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_phone" />

            <TextView
                android:id="@+id/msm_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/graytext" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/aaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_btn_2"
                android:drawableLeft="@drawable/group_pick_leagure"
                android:gravity="center"
                android:text=" 邀请"
                android:textColor="@color/graytext"
                android:textSize="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2" />

            <RelativeLayout
                android:id="@+id/chat_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_btn_2"
                    android:drawableLeft="@drawable/group_chat"
                    android:gravity="center"
                    android:text=" 圈聊"
                    android:textColor="@color/graytext"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/num_unread_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/btn_2"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/new_msg_9"
                    android:gravity="center"
                    android:minWidth="20dp"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="3" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_quit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_triangle_yellow"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:paddingTop="25dp"
            android:scaleType="fitEnd"
            android:src="@drawable/icon_quit" />
    </RelativeLayout>

</LinearLayout>