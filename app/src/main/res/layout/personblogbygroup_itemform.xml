<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="40.0dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="21.3dp"
            android:layout_height="16.6dp"
            android:layout_marginLeft="13.3dp"
            android:src="@drawable/personblogbygroup_img" />

        <TextView
            android:id="@+id/personblogbygroup_itemform_blog"
            style="@style/circleblogdetails_txtStyle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.3dp"
            android:layout_marginRight="23.3dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/personblogbygroup_itemform_toblogdetail"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/arrow_rights" />
    </LinearLayout>

</LinearLayout>