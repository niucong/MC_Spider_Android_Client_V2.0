<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:background="@drawable/menu_title_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/menu_head"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp" />

                <RelativeLayout
                    android:id="@+id/menu_name_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp" >

                    <TextView
                        android:id="@+id/menu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignBottom="@+id/menu_name"
                        android:layout_alignRight="@+id/menu_name"
                        android:src="@drawable/menu_more" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/menu_info"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/menu_info"
                android:gravity="center_vertical"
                android:text="动态墙"
                android:textColor="@color/menu_text"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/menu_hor" />

            <TextView
                android:id="@+id/menu_groups"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/menu_groups"
                android:gravity="center_vertical"
                android:text="交流圈"
                android:textColor="@color/menu_text"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/menu_hor" />

            <TextView
                android:id="@+id/menu_friends"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/menu_friends"
                android:gravity="center_vertical"
                android:text="朋友圈"
                android:textColor="@color/menu_text"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/menu_hor" />

            <TextView
                android:id="@+id/menu_add"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/menu_add"
                android:gravity="center_vertical"
                android:text="添加朋友"
                android:textColor="@color/menu_text"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/menu_hor" />

            <TextView
                android:id="@+id/menu_search"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/menu_search"
                android:gravity="center_vertical"
                android:text="搜索"
                android:textColor="@color/menu_text"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5eb" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/menu_hor" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="应用"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/menu_hor" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/menu_file"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/menu_file"
                    android:gravity="center_vertical"
                    android:text="云文件"
                    android:textColor="@color/menu_text"
                    android:textSize="16dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_ver" />

                <TextView
                    android:id="@+id/menu_note"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/menu_note"
                    android:gravity="center_vertical"
                    android:text="云笔记"
                    android:textColor="@color/menu_text"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/menu_hor" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/menu_mail"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/menu_mail"
                    android:gravity="center_vertical"
                    android:text="邮件管家"
                    android:textColor="@color/menu_text"
                    android:textSize="16dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_ver" />

                <TextView
                    android:id="@+id/menu_contact"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/menu_contact"
                    android:gravity="center_vertical"
                    android:text="备份通讯录"
                    android:textColor="@color/menu_text"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/menu_hor" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/menu_collection"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/menu_collection"
                    android:gravity="center_vertical"
                    android:text="我的收藏"
                    android:textColor="@color/menu_text"
                    android:textSize="16dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_ver" />

                <TextView
                    android:id="@+id/menu_open"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/menu_open"
                    android:gravity="center_vertical"
                    android:text="开放主页"
                    android:textColor="@color/menu_text"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>