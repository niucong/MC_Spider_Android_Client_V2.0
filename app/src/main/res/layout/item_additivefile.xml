<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <ImageView
        android:id="@+id/item_additivefile_iv_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:src="@drawable/icon_image_loading" />

    <TextView
        android:id="@+id/item_additivefile_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/item_additivefile_iv_delete"
        android:layout_toRightOf="@+id/item_additivefile_iv_icon"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/item_additivefile_tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_additivefile_tv_name"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/item_additivefile_iv_icon"
        android:text="TextView"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/item_additivefile_iv_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:src="@drawable/delete_bg" />

</RelativeLayout>