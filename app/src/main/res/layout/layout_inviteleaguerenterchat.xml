<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.datacomo.mc.spider.android.view.SearchBar
        android:id="@+id/cv_searchbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/layout_inviteleaguerentergroupchat_llayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:text="以下圈子成员尚未加入圈聊"
            android:textColor="#333333"
            android:textSize="15dp" />

        <ListView
            android:id="@+id/layout_inviteleaguerentergroupchat_lv_invitableleaguer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/list_divider"
            android:fastScrollEnabled="true"
            android:listSelector="@color/transparent"
            android:scrollbars="none"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_inviteleaguerentergroupchat_llayout_searchbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <ListView
            android:id="@+id/layout_inviteleaguerentergroupchat_searchresultbox_lv_searchresult"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/list_divider"
            android:fastScrollEnabled="true"
            android:listSelector="@color/transparent"
            android:scrollbars="none" />

        <Button
            android:id="@+id/layout_inviteleaguerentergroupchat_searchresultbox_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sharedblog_submit"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>