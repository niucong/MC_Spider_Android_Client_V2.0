<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bar_gray_dark"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/comment_praises"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="2dp"
        android:src="@drawable/send_praise_a" />
    
    <ImageView
        android:id="@+id/comment_face"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="2dp"
        android:src="@drawable/icon_face" />

    <EditText
        android:id="@+id/comment_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="@drawable/edit_bg"
        android:hint="说点什么…"
        android:maxLines="4"
        android:padding="5dp"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/comment_release"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="2dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/btn_release" />

</LinearLayout>